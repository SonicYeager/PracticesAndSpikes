<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:PulsarWorker.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PulsarWorker.Desktop.Views.Settings">

    <UserControl.Styles>
        <Style Selector="TextBlock"> <!-- Defined style globally -->
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
    </UserControl.Styles>

    <Design.DataContext>
        <viewModels:SettingsViewModel />
    </Design.DataContext>

    <DockPanel LastChildFill="False">
        <StackPanel DockPanel.Dock="Left">
            <TextBlock Text="Settings" />
            <ItemsControl ItemsSource="{Binding PersistedOptions}"
                           Width="400"
                           HorizontalAlignment="Stretch"
                           Margin="0,5,0,0">

            </ItemsControl>
        </StackPanel>
    </DockPanel>
</UserControl>