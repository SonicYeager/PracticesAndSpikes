<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTesty.Views.MailPage"
             Title="MailPage">
    <StackLayout HorizontalOptions="CenterAndExpand"
                 VerticalOptions="CenterAndExpand">
        <Label Text="Email Formular"
               TextDecorations="Underline"/>
        <Entry Placeholder="Type address of sender..."
               Text="{Binding Sender}"
               x:Name="SenderFieldEntry"/>
        <Entry Placeholder="Type address of receiver..."
               Text="{Binding Receiver}"
               x:Name="ReceiverFieldEntry"/>
        <Entry Placeholder="Type subject..."
               Text="{Binding Subject}"
               x:Name="SubjectFieldEntry"/>
    </StackLayout>
</ContentPage>