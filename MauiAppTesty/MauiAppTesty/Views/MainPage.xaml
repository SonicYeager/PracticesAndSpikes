<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTesty.MainPage">
    <StackLayout HorizontalOptions="CenterAndExpand"
                 VerticalOptions="CenterAndExpand">
        <Label Text="Email Formular"
               TextDecorations="Underline"/>
        <Entry Placeholder="Type address of sender..."
               Text="{Binding SenderField}"
               x:Name="SenderField"/>
        <Entry Placeholder="Type address of receiver..."
               x:Name="ReceiverField"/>
        <Entry Placeholder="Type subject..."
               x:Name="SubjectField"/>
    </StackLayout>
</ContentPage>
